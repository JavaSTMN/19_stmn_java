package exercice1;

public class Operations {
	
	public static int sumOfCube(int n) throws Exception {
		if(n == 0 || n < 0) {
			throw new Exception("Doit etre positif et non null");
		}
		int sum = 0;
		for(int i = 1; i <= n; i++) {
			sum += Math.pow(i, 3);
		}
		return sum;
	}
	
	public static int cubeOfSum(int n) throws Exception {
		if(n == 0 || n < 0) {
			throw new Exception("Doit etre positif et non null");
		}
		int sum = 0;
		for(int i = 1; i <= 1; i++) {
			sum += i;
		}
		sum = Math.pow(sum, 3);
		return sum;
	}

}
